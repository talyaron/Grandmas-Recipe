{
  "name": "grandmas-recipes",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "client",
    "server"
  ],
  "scripts": {
    "dev": "npm run build:shared && concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "npm run dev -w client",
    "dev:server": "npm run dev -w server",
    "build": "npm run build:shared && npm run build:server && npm run build:client",
    "build:shared": "npm run build -w @grandmas-recipes/shared-schemas",
    "build:client": "npm run build -w client",
    "build:server": "npm run build -w server"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}
